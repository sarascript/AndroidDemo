<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CheckboxActivity">


    <!-- ............................. CHECKBOX ............................. -->

    <!-- AÃ±adir el evento onClick con el mismo nombre en cada CheckBox -> android:onClick="generoClicked" -->

    <CheckBox
        android:onClick="generoClicked"
        android:id="@+id/checkBoxHombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hombre" />

    <CheckBox
        android:onClick="generoClicked"
        android:id="@+id/checkBoxMujer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mujer" />

    <CheckBox
        android:onClick="generoClicked"
        android:id="@+id/checkBoxNoBinario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No Binario" />

</LinearLayout>